# include <bits/stdc++.h>
int getKthLargest(vector<int> &arr, int k)
{
    priority_queue<int,vector<int> , greater<int>> ans;
    int n = arr.size();
    for(int i=0;i<n;i++){
        int sum =0;
        for(int j=i;j<n;j++){
            sum+= arr[j];
            if(ans.size()<k)
                ans.push(sum);
            else{
                if(sum>ans.top()){
                    ans.pop();
                    ans.push(sum);
                }
            }
        }
    }

    return ans.top();
}
