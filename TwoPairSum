class Solution{
    private:
    void solve(struct Node *root, vector <int> &ans){
        if(root==NULL)return;
        
        solve(root->left,ans);
        ans.push_back(root->data);
        solve(root->right,ans);
    }
  public:
    // root : the root Node of the given BST
    // target : the target sum
    int isPairPresent(struct Node *root, int target)
    {
    vector<int> ans;
    solve(root,ans);
    int n=ans.size();
    int i=0;
    int j=n-1;
    while(i<=j){
        int sum = ans[i]+ans[j];
        if(sum==target)
        return 1;
        
        else if(sum>target){
            j--;
        }
        else{
            i++;
        }
    }
    return 0;
    }
};
