void heapify(vector<int> &ans, int i,int n){
        int lr = i;
        int left = 2*i + 1;
        int right = 2*i + 2;
        if(left<n && ans[left]>ans[lr])
        lr = left;
        if(right<n && ans[right]>ans[lr])
        lr = right;
        
        if(lr!=i){
            swap(ans[i],ans[lr]);
            heapify(ans,lr,n);
        }
        return ;
}
vector<int>MinToMaxHeap(int n, vector<int>&arr)
{
	for(int i = n/2-1;i>=0;i--){
        heapify(arr,i,n);
    }
    return arr;
}
