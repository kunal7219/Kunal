#include <bits/stdc++.h> 
string getMinimumSum(vector<int> &arr, int n)
{
	priority_queue<long long,vector<long long> , greater<long long>> pq;
        for(int i=0;i<n;i++){
            pq.push(arr[i]);
        }
    long long ans1 = 0;
    long long ans2 = 0;
    while(pq.size()>0){
        ans1 = ans1*10 + pq.top();
        pq.pop();
        if(pq.size()>0){
        ans2 = ans2*10 + pq.top();
        pq.pop();
        }
    }
    long long ans = ans1+ans2;
    string str= to_string(ans);
    return str;
}
